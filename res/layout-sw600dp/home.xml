<!-- style="?android:listSeparatorTextViewStyle" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="?sfondo"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="@integer/weightTileAccountsLand"
            android:orientation="vertical"
            >

        <TextView
                android:id="@+id/titleAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/account"
                android:textAllCaps="true"
                android:textColor="@color/azzurro"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                style="?blocco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="@integer/weightTileServerLand"
            android:orientation="vertical">

        <TextView
                android:id="@+id/titleServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/remoto"
                android:textAllCaps="true"
                android:textColor="@color/azzurro"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <FrameLayout
                android:id="@+id/f_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="@integer/weightTileLocalLand"
            android:orientation="vertical">

        <TextView
                android:id="@+id/titleUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="@string/locale"
                android:textAllCaps="true"
                android:textColor="@color/azzurro"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <fragment
                android:id="@+id/f_upload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="turbo.client.list.FragmenLocalFilesList"
                tools:layout="@layout/file_to_upload">
        </fragment>
    </LinearLayout>

</LinearLayout>