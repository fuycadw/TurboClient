<resources>

    <style name="Dark" parent="@style/Theme.Sherlock">
        <item name="menuIconNewAccount">@drawable/ic_action_new_account</item>
        <item name="menuIconNewFolder">@drawable/ic_action_create_folder</item>
        <item name="menuIconCloseConnection">@drawable/ic_action_cancel</item>
        <item name="menuIconDownload">@drawable/ic_action_download</item>
        <item name="menuIconTick">@drawable/ic_action_tick</item>

        <item name="blocco">@style/fragment_nero</item>
        <item name="file">@style/file_nero</item>
        <item name="sfondo">@style/sfondo_nero</item>
        <item name="checkbox">@style/MyCheckBoxDark</item>
        <item name="PagerTitleStripBG">@color/panel_medium</item>
    </style>

    <style name="PureLight" parent="@style/Theme.Sherlock.Light">
        <item name="menuIconNewAccount">@drawable/ic_action_new_account_light</item>
        <item name="menuIconNewFolder">@drawable/ic_action_create_folder_light</item>
        <item name="menuIconCloseConnection">@drawable/ic_action_cancel_light</item>
        <item name="menuIconDownload">@drawable/ic_action_download_light</item>
        <item name="menuIconTick">@drawable/ic_action_tick_light</item>

        <item name="blocco">@style/fragment_bianco</item>
        <item name="file">@style/file_bianco</item>
        <item name="sfondo">@style/sfondo_bianco</item>
        <item name="checkbox">@style/MyCheckBoxLight</item>
        <item name="PagerTitleStripBG">@color/griggio2</item>
    </style>

    <style name="LightAndDark" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="menuIconNewAccount">@drawable/ic_action_new_account</item>
        <item name="menuIconNewFolder">@drawable/ic_action_create_folder</item>
        <item name="menuIconCloseConnection">@drawable/ic_action_cancel</item>
        <item name="menuIconDownload">@drawable/ic_action_download</item>
        <item name="menuIconTick">@drawable/ic_action_tick</item>

        <item name="blocco">@style/fragment_bianco</item>
        <item name="file">@style/file_bianco</item>
        <item name="sfondo">@style/sfondo_bianco</item>
        <item name="checkbox">@style/MyCheckBoxLight</item>
        <item name="PagerTitleStripBG">@color/panel_medium</item>
    </style>

    <style parent="@android:style/Widget.Holo.ActionBar" name="ActionBar"/>
    <style parent="@style/ActionBar" name="ActionBar.Light">
        <item name="android:background">@color/actionbar_background_light</item>
    </style>
    <style parent="@style/ActionBar" name="ActionBar.Dark">
        <item name="android:background">@color/actionbar_background_dark</item>
    </style>

    <style name="PictureDark" parent="@style/Theme.Sherlock">
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="PictureLight" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Light</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="FileEditorTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/panel_medium_dark</item>
        <item name="menuIconTick">@drawable/ic_action_tick</item>
        <item name="menuIconUndo">@drawable/ic_action_undo</item>
        <item name="menuIconRedo">@drawable/ic_action_redo</item>
    </style>

</resources>