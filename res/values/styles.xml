<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyActionButton">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:paddingStart">12dip</item>
        <item name="android:paddingEnd">12dip</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="MyCheckBoxDark">
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>

    <style name="MyCheckBoxLight">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="gridview">
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:columnWidth">@dimen/grandezza_tile</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
    </style>

    <style name="sfondo_bianco">
        <item name="android:background">@color/eee</item>
    </style>

    <style name="sfondo_nero">
        <!--   <item name="android:background">@color/near_black</item>  -->
        <item name="android:background">@color/panel_darkest</item>
    </style>

    <style name="fragment_bianco">
        <item name="android:background">@drawable/frag_back_light</item>
    </style>

    <style name="fragment_nero">
        <item name="android:background">@color/griggio_tema</item>
    </style>

    <style name="file_bianco">
        <item name="android:background">@drawable/frag_back_light</item>
    </style>

    <style name="file_nero">
        <item name="android:background">@color/griggio_tema</item>
    </style>
</resources>